<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:alpha="0.9">

    <LinearLayout
        android:id="@+id/dev1"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/card_bg">

        <ImageView
            android:layout_margin="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/alabhya"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="16dp"
                android:text="@string/dev1"
                android:textSize="24sp"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/dev1attr"
                android:textSize="14sp"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dev2"
        android:background="@drawable/card_bg"
        android:layout_margin="16dp"
        android:layout_below="@id/dev1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:text="@string/dev2"
                android:textSize="24sp"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:text="@string/dev2attr"
                android:textSize="14sp"
                android:textColor="@color/White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:layout_margin="8dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/karan"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dev3"
        android:background="@drawable/card_bg"
        android:layout_margin="16dp"
        android:layout_below="@id/dev2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:layout_margin="8dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/anshuman"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="16dp"
            android:text="@string/dev3"
            android:textSize="24sp"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/dev3attr"
            android:textSize="14sp"
            android:textColor="@color/White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>






</RelativeLayout>